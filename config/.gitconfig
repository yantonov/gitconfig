[core]
    excludesfile = ~/.gitignore_global
    editor = emacs
    autocrlf = input
    symlinks = true

[include]
    # https://docs.github.com/articles/setting-your-email-in-git
    path=~/.gituser
    path=~/.gitaliases

    # delta diff tool config
    # https://github.com/dandavison/delta  
    # path=~/.gitdelta

    # difft diff tool config
    # https://github.com/Wilfred/difftastic
    path=~/.gitdifft
    
    # this helps to override something for particular environment
    path=~/.gitconfig_custom
