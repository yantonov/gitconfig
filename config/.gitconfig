[core]
    excludesfile = ~/.gitignore_global
    editor = emacs
    pager = delta
    autocrlf = input
    symlinks = true

[delta]
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[include]
    # https://docs.github.com/articles/setting-your-email-in-git
    path=~/.gituser
    path=~/.gitaliases
    # this helps to override something for particular environment
    path=~/.gitconfig_custom
